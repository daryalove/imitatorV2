<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/NotActivPageColor"/>
            <stroke android:width="1dp"
                android:color="@color/BackgroundColor"/>
            <size android:width="@dimen/WidthHeightForSwitch"
                android:height="@dimen/WidthHeightForSwitch"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/NotActivPageColor"/>
            <stroke android:width="1dp"
                android:color="@color/NotActivPageColor"/>
            <size android:width="@dimen/WidthHeightForSwitch"
                android:height="@dimen/WidthHeightForSwitch"/>
        </shape>
    </item>

</selector>