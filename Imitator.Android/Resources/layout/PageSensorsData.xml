<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:padding="@dimen/edge_padding"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="center" 
                android:src="@drawable/temperature"/>
            <TextView
                style="@style/TextHeader3Style"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Температура"/>
            <TextView
                style="@style/TextHeader3Style"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:text="40.7 °C"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
            <com.akaita.android.circularseekbar.CircularSeekBar
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:id="@+id/SeekBarSelectedCharacteristic"
                android:layout_centerInParent="true"
                app:enabled="true"
                app:innerCircleColor="@android:color/transparent"
                app:min="0"
                app:max="100"
                app:progress="0"
                app:progressTextColor="#002965"
                app:progressTextSize="25"
                app:ringColor="#bdbdbd"
                app:ringWidth="0.5"
                app:showIndicator="true"
                app:showProgressText="true"
                app:speedMultiplier="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:orientation="horizontal">
        
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:id="@+id/BtnIncreaseSensorValue"           
                    android:textSize="18dp"
                    android:elevation="10dp"
                    android:textColor="#f5f5f5"
                    android:text="+"
                    android:background="@drawable/ChangingSensorValuesButtonStyle"
                    android:layout_margin="10dp"
                    android:layout_gravity="top"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:id="@+id/BtnReduceSensorValue"
                    android:textSize="18dp"
                    android:elevation="10dp"
                    android:textColor="#f5f5f5"
                    android:text="-"
                    android:background="@drawable/ChangingSensorValuesButtonStyle"
                    android:layout_margin="10dp"
                    android:layout_gravity="top"/>
        
            </LinearLayout>
        
        </LinearLayout>
                             
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding = "5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation = "horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation = "vertical">
                    <TextView
                        android:text="Батарея, %"
                        style="@style/TextSensorsStyle"
                        android:textSize="15dp"/>
                    <TextView
                        android:text="10"
                        android:textSize="13dp"
                        style="@style/TextSensorsStyle"
                        android:id="@+id/BatteryValue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "14dp"
                    android:orientation = "vertical">
                    <TextView
                        android:text="Вес, кг"
                        style="@style/TextSensorsStyle"
                        android:textSize="15dp"/>
                    <TextView
                        android:text="10"
                        android:textSize="13dp"
                        style="@style/TextSensorsStyle"
                        android:id="@+id/WeightValue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "14dp"
                    android:orientation = "vertical">
                    <TextView
                        android:text="Температура, C°"
                        style="@style/TextSensorsStyle"
                        android:textSize="15dp"/>
                    <TextView
                        android:text="10"
                        android:textSize="13dp"
                        style="@style/TextSensorsStyle"
                        android:id="@+id/TemperatureValue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "14dp"
                    android:orientation = "vertical">
                    <TextView
                        android:text="Влажность, %"
                        style="@style/TextSensorsStyle"
                        android:textSize="15dp"/>
                    <TextView                                  
                        android:text="10"
                        android:textSize="13dp"
                        style="@style/TextSensorsStyle"
                        android:id="@+id/HumidityValue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "14dp"
                    android:orientation = "vertical">
                    <TextView
                        android:text="Освещенность, лм"
                        style="@style/TextSensorsStyle"
                        android:textSize="15dp" />
                    <TextView
                        android:text="10"
                        android:textSize="13dp"
                        style="@style/TextSensorsStyle"
                        android:id="@+id/IlluminationValue" />
                </LinearLayout>                   
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textSize="18dp"
        android:elevation="10dp"
        android:textColor="#fafafa"
        android:text="Сохранить"
        android:background="@drawable/ButtonStyle"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"/>
    
</LinearLayout>