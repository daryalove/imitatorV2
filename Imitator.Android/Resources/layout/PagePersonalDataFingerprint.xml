<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        style="@style/TextHeader2Style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Выберите действие, чтобы изменить доступ к авторизации с помощью отпечатка пальца."/>


    <ImageButton        
        android:layout_marginTop="20dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/BtnFingerprintRegistration"
        android:background="@drawable/FingerprintButtonStyle"
        android:src="@drawable/FingerprintImage"/>

     <TextView
        android:id="@+id/TextAccessFingerprintAuthorisation"
        style="@style/TextHeader2Style"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/EventNotAllowColor"
        android:text="Авторизация с помощью отпечатка пальца запрещена"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
   
        <TextView
            style="@style/TextHeader2Style"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/LeftRightMarginForEditText"
            android:text="Разрешить"/>
    
        <androidx.appcompat.widget.SwitchCompat
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"    
            android:id="@+id/ChangeAccessFingerprintAuthorisation"
            android:thumb="@drawable/SwitchThumb"
            app:track="@drawable/switchtrack"
            android:textSize="@dimen/BaseTextSize"
            app:showText="true"
            android:textOn="Да"
            android:textOff="Нет"/>

    </LinearLayout>
    

</LinearLayout>