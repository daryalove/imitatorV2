<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">   

        <TextView
            style="@style/TextSensorsStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Фамилия"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/TextColor"/>

        <TextView
            style="@style/TextSensorsStyle"
            android:id="@+id/LastNamePersonalData"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Головко"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">   

        <TextView
            style="@style/TextSensorsStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Имя"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/TextColor"/>

        <TextView
            style="@style/TextSensorsStyle"
            android:id="@+id/FirstNamePersonalData"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Илья"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">   

        <TextView
            style="@style/TextSensorsStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Логин/E-mail"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/TextColor"/>

        <TextView
            style="@style/TextSensorsStyle"
            android:id="@+id/LoginPersonalData"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="ilya.golowko2017@yandex.ru"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">   

        <TextView
            style="@style/TextSensorsStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Пароль"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/TextColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">   
        
            <TextView
                style="@style/TextSensorsStyle"
                android:id="@+id/PasswordPersonalData"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:text="***********"/>

            <ImageButton        
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:id="@+id/BtnPasswordShowHide"
                android:src="@drawable/PasswordShow"/>
        </LinearLayout>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
   
        <TextView
            style="@style/TextHeader2Style"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/LeftRightMarginForEditText"
            android:text="Изменить данные"/>
    
        <androidx.appcompat.widget.SwitchCompat
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"    
            android:id="@+id/SWSaveChangedPersonalDataLoginPassword"
            android:thumb="@drawable/SwitchThumb"
            app:track="@drawable/switchtrack"
            android:textSize="@dimen/BaseTextSize"
            app:showText="true"
            android:textOn="Да"
            android:textOff="Нет"/>

    </LinearLayout>

</LinearLayout>